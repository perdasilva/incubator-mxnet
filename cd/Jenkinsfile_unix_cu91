// timeout in minutes
max_time = 180

node('restricted-utility') {
  // Loading the utilities requires a node context unfortunately
  checkout scm
  utils = load('ci/Jenkinsfile_utils.groovy')
  custom_steps = load('cd/Jenkins_steps.groovy')
}
utils.assign_node_labels(utility: 'restricted-utility', linux_cpu: 'restricted-mxnetlinux-cpu', linux_gpu: 'restricted-mxnetlinux-gpu', linux_gpu_p3: 'restricted-mxnetlinux-gpu-p3')

utils.main_wrapper(
core_logic: {
  utils.parallel_stage('Build', [
    custom_steps.compile_unix_static_cu91(),
    custom_steps.compile_unix_static_cu91_mkl(),
  ]) 

  utils.parallel_stage('Tests', [
    custom_steps.test_unix_python2_gpu('cu91'),
    custom_steps.test_unix_python3_gpu('cu91'),
    custom_steps.test_unix_python2_quantize_gpu('cu91'),
    custom_steps.test_unix_python3_quantize_gpu('cu91'),
    custom_steps.test_unix_python2_mkldnn_gpu('cu91'),
    custom_steps.test_unix_python3_mkldnn_gpu('cu91'),
    custom_steps.test_unix_python3_integration_gpu('cu91'),
    custom_steps.test_unix_distributed_kvstore_gpu('cu91'),

    // Disabled due to: https://github.com/apache/incubator-mxnet/issues/11407
    //custom_steps.test_unix_caffe_gpu()
  ])

  utils.parallel_stage('Package Pip', [
    custom_steps.pip_package_unix_gpu('cu91'),
    custom_steps.pip_package_unix_gpu_mkl('cu91'),
  ])

  utils.parallel_stage('Package Docker', [
    custom_steps.docker_build_gpu('cu91', '1.4.0', false, false),
    custom_steps.docker_build_gpu('cu91', '1.4.0', true, false),
    custom_steps.docker_build_gpu('cu91', '1.4.0', false, true),
    custom_steps.docker_build_gpu('cu91', '1.4.0', true, true)
  ])
}
,
failure_handler: {
  // Only send email if master or release branches failed
  if (currentBuild.result == "FAILURE" && (env.BRANCH_NAME == "master" || env.BRANCH_NAME.startsWith("v"))) {
    emailext body: 'Build for MXNet branch ${BRANCH_NAME} has broken. Please view the build at ${BUILD_URL}', replyTo: '${EMAIL}', subject: '[BUILD FAILED] Branch ${BRANCH_NAME} build ${BUILD_NUMBER}', to: '${EMAIL}'
  }
}
)
