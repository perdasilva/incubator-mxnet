// Jenkins pipeline
// See documents at https://jenkins.io/doc/book/pipeline/jenkinsfile/

// MXNet Continuous Delivery Pipeline
// Orchestrates the release of the different artifact by calling
// downstream release jobs.
// There are two parallel execution paths: releases based on statically linked libmxnet libraries
// and base on dynamically linked libmxnet libraries.

pipeline {
  agent {
    label 'restricted-utility'
  }

  parameters {
    // Release parameters
    string(defaultValue: "", description: 'Optional commit id to use for release', name: "MXNET_SHA")
    booleanParam(defaultValue: false, description: 'Whether this is a release build or not', name: "RELEASE_BUILD")
    string(defaultValue: "cpu,mkl,cu80,cu80mkl,cu90,cu90mkl,cu92,cu92mkl,cu100,cu100mkl", description: "Comma separated list of variants", name: "MXNET_VARIANTS")
  }

  stages {
    stage("Init") {
      steps {
        script {
          cd_utils = load('ci/cd/Jenkinsfile_utils.groovy')
          cd_utils.set_release_job_name('restricted-mxnet-cd/mxnet-cd-release-job')

          // initialize the MXNET_SHA variable to the current GIT_COMMIT if not set
          env.MXNET_SHA = env.MXNET_SHA ?: env.GIT_COMMIT
        }
      }
    }

    stage("MXNet Release") {
      steps {
        script {
          // Add CD Pipeline
        }
      }
    }
  }
}
